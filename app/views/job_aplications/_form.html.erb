<%= form_with(model: job_aplication, local: true) do |form| %>
  <% if job_aplication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_aplication.errors.count, "error") %> prohibited this job_aplication from being saved:</h2>

      <ul>
        <% job_aplication.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name%>
    <%= form.text_field :name, value: current_user.name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth, class: "form-control", :start_year => Date.current.year, :end_year => 1900 %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, value: current_user.email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_num %>
    <%= form.text_field :phone_num, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :adress %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :education %>
    <br>
    <%= form.select :education, $education, prompt:"Select your education", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :job_id %>
    <br>
    <%= form.collection_select :job_id, Job.all, :id, :name, promt: true, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :attachment %>
    <br>
    <%= form.file_field :attachment %>   
  </div>

  <%= form.hidden_field :user_id, value: current_user.id%>

  <hr>
  <div class="form-group ">
    <%= form.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
