<h1>Job Aplications</h1>

  <table class="table table-striped text-nowrap text-center">
    <thead class="thead-dark">
      <tr>
        <th>Job</th>
        <th>Employer</th>
        <th>Candidate name</th>
        <th>Date of birth</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Adress</th>
        <th>Education</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @job_aplications.order(:id).each do |job_aplication| %>
        <% if job_aplication.job.user.employer == true && job_aplication.job.user.id == current_user.id %>
          <tr>      
            <td><strong><%= job_aplication.job.name %></strong></td>
            <td><%= job_aplication.job.user.name %></td>
            <td><%= job_aplication.name %></td>
            <td><%= Date.parse(job_aplication.date_of_birth.to_s) %></td>
            <td><%= job_aplication.email %></td>
            <td><%= job_aplication.phone_num %></td>
            <td><%= job_aplication.address %></td>
            <td><%= job_aplication.education %></td>
            <td><%= link_to "View attachment", job_aplication.attachment_url,  class:"btn btn-sm btn-warning"  %></td>
            <td><%= link_to 'Edit', edit_job_aplication_path(job_aplication) %></td>
            <td><%= link_to 'Destroy', job_aplication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%#= link_to 'Show', job_aplication %></td>
          </tr>

          <% elsif job_aplication.user_id == current_user.id %>
            <tr>      
              <td><strong><%= job_aplication.job.name %></strong></td>
              <td><%= job_aplication.job.user.name %></td>
              <td><%= job_aplication.name %></td>
              <td><%= Date.parse(job_aplication.date_of_birth.to_s) %></td>
              <td><%= job_aplication.email %></td>
              <td><%= job_aplication.phone_num %></td>
              <td><%= job_aplication.address %></td>
              <td><%= job_aplication.education %></td>
              <td><%= link_to "View attachment", job_aplication.attachment_url,  class:"btn btn-sm btn-warning"  %></td>   
              <td><%= link_to 'Edit', edit_job_aplication_path(job_aplication), class:"btn btn-sm btn-info" %></td>
              <td><%= link_to 'Delete', job_aplication, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger"%></td>
              <td><%#= link_to 'Show', job_aplication, class:"btn btn-sm btn-success" %></td>
            </tr>
          <% end%>
      <% end%>
    </tbody>
  </table>

  <br>